<Window x:Class="map2agbgui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:map2agbgui"
        mc:Ignorable="d"
        xmlns:model="clr-namespace:map2agbgui.Models"
        Title="map2agb GUI" Height="600" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized" Loaded="Window_Loaded">

    <Window.Resources>
        <Style TargetType="TreeViewItem" x:Key="BankStyle">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsExpanded" Value="True" />
        </Style>
        <Style TargetType="TreeViewItem" x:Key="MapStyle">
            <Setter Property="Focusable" Value="True"/>
            <EventSetter Event="MouseDoubleClick" Handler="MapTreeViewElement_DoubleClick" />
        </Style>
        <HierarchicalDataTemplate x:Key="MapTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="3" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Height="Auto" Width="Auto" Source="{Binding Value.IconPath}" Grid.Column="0" />
                <TextBlock Grid.Column="2" Text="{Binding DisplayValue}" />
            </Grid>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate x:Key="BankTemplate" ItemsSource="{Binding Value.Maps}" ItemTemplate="{StaticResource MapTemplate}" ItemContainerStyle="{StaticResource MapStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="3" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Height="Auto" Width="Auto" Source="Assets/Folder_16x.png" Grid.Column="0" />
                <TextBlock Grid.Column="2" Text="{Binding DisplayValue}" />
            </Grid>
        </HierarchicalDataTemplate>
    </Window.Resources>

    <Grid d:DataContext="{d:DesignInstance Type=model:MainModel, IsDesignTimeCreatable=True}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="150" Width="*"/>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="6*" MinWidth="600"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
            <Menu DockPanel.Dock="Top" Padding="3">
                <MenuItem Header="_Project">
                    <MenuItem Header="_Open">
                        <MenuItem.Icon>
                            <Image Source="assets/Open_16x.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Save">
                        <MenuItem.Icon>
                            <Image Source="assets/Save_16x.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Save _As">
                        <MenuItem.Icon>
                            <Image Source="assets/SaveAs_16x.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator HorizontalAlignment="Left" Width="120"/>
                    <MenuItem Header="_Exit"/>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem x:Name="AboutMenuButton" Header="_About" Click="AboutMenuButton_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <DockPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
            <Menu DockPanel.Dock="Top" Padding="3">
                <MenuItem ToolTip="Add map" x:Name="AddMapButton" Click="AddMapButton_Click">
                    <MenuItem.Header>
                        <Image Width="32" Height="32" Source="Assets/Create_32x.png" Margin="3" />
                    </MenuItem.Header>
                </MenuItem>
                <MenuItem ToolTip="Blockeditor" x:Name="BlockeditorButton" Click="BlockeditorButton_Click">
                    <MenuItem.Header>
                        <Image Width="32" Height="32" Source="Assets/ConfigureComputer_32x.png" Margin="3" />
                    </MenuItem.Header>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Grid Grid.Column="0" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TreeView x:Name="MapTreeView" Grid.Row="0" ItemsSource="{Binding Banks}" ItemTemplate="{StaticResource BankTemplate}" ItemContainerStyle="{StaticResource BankStyle}" />
            <StackPanel Grid.Row="1">
                <Label Content="Name" />
            </StackPanel>
        </Grid>
        <GridSplitter Grid.Row="2" Grid.Column="1" Width="5" HorizontalAlignment="Center" />
        <TabControl Grid.Row="2" Grid.Column="2">
            <TabItem Header="Map">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" MinWidth="400"/>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="*" MinWidth="150"/>
                    </Grid.ColumnDefinitions>
                    <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                        <Menu DockPanel.Dock="Top" Padding="3">
                            <MenuItem Header="Bla" />
                        </Menu>
                    </DockPanel>
                    <Grid Grid.Row="1" Grid.Column="0">
                        
                    </Grid>
                    <GridSplitter Grid.Row="2" Grid.Column="1" Width="5" HorizontalAlignment="Center" />
                    <StackPanel Grid.Row="1" Grid.Column="2">
                        <Label Grid.Row="0" Content="Foo" />
                        <Label Grid.Row="1" Content="Bar" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Header" />
        </TabControl>
        
        <DockPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3">
            <Menu DockPanel.Dock="Bottom">
                <Label Content="{Binding Status}" />
            </Menu>
        </DockPanel>
    </Grid>
</Window>
